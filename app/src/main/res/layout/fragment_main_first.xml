<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/left_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintTop_toTopOf="@id/right_section"
        app:layout_constraintBottom_toBottomOf="@id/right_section">
<!--app:layout_constraintHorizontal_bias="0.2"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9.8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mintemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aritaum_semi_bold"
                android:text="최저"
                android:textColor="@color/mainText"
                android:textSize="18sp" />
<!--android:textSize="16sp"-->
            <TextView
                android:id="@+id/tv_mintemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18.7dp"
                android:fontFamily="@font/aritaum_semi_bold"
                android:textColor="#00bdff"
                android:textSize="28sp" />
        </LinearLayout>
<!--android:textSize="25sp"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9.8dp"
            android:layout_marginTop="11.3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/maxtemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aritaum_semi_bold"
                android:text="최고"
                android:textColor="@color/mainText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_maxtemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18.7dp"
                android:fontFamily="@font/aritaum_semi_bold"
                android:textColor="#f73826"
                android:textSize="28sp" />
        </LinearLayout>

        <!--<TextView-->
            <!--android:id="@+id/tv_yesterday"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="12.8dp"-->
            <!--android:fontFamily="@font/aritaum_medium"-->
            <!--android:text="어제보다     도 높아요!"-->
            <!--android:textColor="#7c7c7c"-->
            <!--android:textSize="12sp" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/left_section"
        app:layout_constraintBottom_toBottomOf="@id/left_section"
        app:layout_constraintHorizontal_bias="0.75">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/windspeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aritaum_semi_bold"
                android:text="풍속"
                android:textColor="@color/mainText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rainfall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.7dp"
                android:fontFamily="@font/aritaum_semi_bold"
                android:text="강수확률"
                android:textColor="@color/mainText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pm10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.7dp"
                android:fontFamily="@font/aritaum_semi_bold"
                android:text="미세먼지"
                android:textColor="@color/mainText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sensetemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.7dp"
                android:fontFamily="@font/aritaum_semi_bold"
                android:text="체감온도"
                android:textColor="@color/mainText"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21.9dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_windspeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aritaum_medium"
                android:textColor="@color/mainText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_rainfall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.7dp"
                android:fontFamily="@font/aritaum_medium"
                android:textColor="@color/mainText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_pm10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.7dp"
                android:fontFamily="@font/aritaum_medium"
                android:textColor="@color/mainText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_sensetemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.7dp"
                android:fontFamily="@font/aritaum_medium"
                android:textColor="@color/mainText"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>