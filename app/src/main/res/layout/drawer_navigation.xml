<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#979797">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.05"
        android:background="@color/backgroundDefault"
        android:layout_marginBottom="0.5dp">

        <LinearLayout
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40.2dp"
            android:layout_marginLeft="11.9dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/mainBlue"
                android:text="MY 알람"
                android:layout_marginLeft="4.1dp"
                android:fontFamily="@font/aritaum_semi_bold"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_alarm_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_alarm_setting"
            android:layout_alignParentRight="true"
            android:layout_marginTop="38.9dp"
            android:layout_marginRight="10.3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:textColor="#5d5d5d"
            android:text="설정된 기상시간에 맞춰\n푸쉬알람으로 날씨정보가 제공됩니다."
            android:layout_below="@+id/image1"
            android:layout_marginTop="2.9dp"
            android:layout_marginLeft="18.1dp"
            android:fontFamily="@font/sf_pro_text_regular"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="25.8dp"
            android:layout_marginBottom="15.3dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ampm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="#262626"
                android:gravity="center_horizontal"
                android:text="오전"
                android:layout_marginRight="7.6dp"
                android:layout_marginBottom="6.6dp"
                android:fontFamily="@font/sf_pro_text_semibold"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#262626"
                android:gravity="center_horizontal"
                android:text="8시 30분"
                android:fontFamily="@font/sf_pro_text_semibold"
                />
        </LinearLayout>
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/backgroundDefault"
        android:layout_marginBottom="0.5dp"
        >

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linear2"
            app:layout_constraintLeft_toLeftOf="parent">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_info"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/mainBlue"
                android:text="앱 정보"
                android:fontFamily="@font/aritaum_semi_bold"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="18.1dp"
            app:layout_constraintTop_toBottomOf="@id/linear1"
            app:layout_constraintBottom_toTopOf="@+id/linear3"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/mainText"
                android:text="개발"
                android:fontFamily="@font/sf_pro_text_semibold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="0.8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/mainText"
                    android:text="컴퓨터공학부 17 전예린"
                    android:layout_marginBottom="6.1dp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/mainText"
                    android:text="정보통신공학과 16 최아현"
                    android:layout_marginBottom="6.1dp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/mainText"
                    android:text="임베디드시스템공학과 16 장민우"
                    android:layout_marginBottom="6.1dp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16.6dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@+id/linear2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/mainText"
                android:text="디자인"
                android:fontFamily="@font/sf_pro_text_semibold"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8.4dp"
                android:layout_marginLeft="2.3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/mainText"
                    android:text="디자인학부 16 정서연"
                    android:layout_marginBottom="6.1dp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/mainText"
                    android:text="디자인학부 18 이예린"
                    android:layout_marginBottom="6.1dp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    />
            </LinearLayout>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical"
        android:background="@color/backgroundDefault"
        android:gravity="right|center_vertical"
        android:paddingRight="23.8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#1760d5"
            android:text="인천대학교 앱센터"
            android:layout_marginRight="5.8dp"
            android:paddingTop="10dp"
            android:fontFamily="@font/sf_pro_text_semibold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="@color/mainText"
            android:gravity="right"
            android:layout_marginTop="6.9dp"
            android:layout_marginRight="0.6dp"
            android:text="http://appcenter.incheon.ac.kr/\n032-835-9447"
            android:fontFamily="@font/sf_pro_text_regular"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginTop="9.5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/mainBlue"
                android:text="버전"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/sf_pro_text_semibold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="@color/mainText"
                android:text="@string/version"
                android:fontFamily="@font/sf_pro_text_regular"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginTop="1.7dp"
            android:layout_marginRight="4.1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/mainBlue"
                android:text="최종 업데이트"
                android:layout_marginRight="3dp"
                android:fontFamily="@font/sf_pro_text_semibold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="@color/mainText"
                android:text="@string/update_date"
                android:fontFamily="@font/sf_pro_text_regular"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>