<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_text1"
        android:layout_marginTop="59.3dp"
        android:layout_marginLeft="32.3dp"
        android:textSize="28sp"
        android:textColor="#262626"
        android:text="반가워요\nINU 이런날-씨"
        android:fontFamily="@font/sf_pro_text_semibold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_text2"
        android:layout_below="@id/tv_text1"
        android:layout_marginTop="5.8dp"
        android:layout_marginLeft="33.9dp"
        android:textSize="13sp"
        android:lineSpacingExtra="6sp"
        android:textColor="#333333"
        android:text="INU 이런날씨는 인천대 학생들에게\n실시간 송도 날씨를 알려드립니다."
        android:fontFamily="@font/sf_pro_text_regular"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_tutorial1"
        android:layout_below="@+id/tv_text2"
        android:layout_marginTop="64.2dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_imageAssetsFolder="tutorial1/"
        app:lottie_fileName="tutorial1.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
</RelativeLayout>