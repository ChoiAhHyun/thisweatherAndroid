<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_text1"
        android:layout_marginTop="59.3dp"
        android:layout_marginLeft="32.3dp"
        android:textSize="28sp"
        android:textColor="#262626"
        android:text="몇시에\n일어나세요?"
        android:fontFamily="@font/sf_pro_text_semibold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_text2"
        android:layout_marginTop="5.8dp"
        android:layout_marginLeft="31.9dp"
        android:textSize="13sp"
        android:textColor="#333333"
        android:text="기상시간에 맞춰 푸쉬알람으로\n날씨정보가 제공됩니다."
        android:fontFamily="@font/sf_pro_text_regular"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37.4dp"
        android:layout_marginLeft="32.3dp"
        android:layout_marginRight="32.2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#0957d3"
            android:gravity="center_horizontal"
            android:text="기상시간을 설정해주세요"
            android:id="@+id/tv_timeSet"
            android:layout_marginLeft="12.2dp"
            android:fontFamily="@font/sf_pro_text_semibold"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_time"
            android:layout_marginTop="28.1dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_timeSet"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="#262626"
                android:gravity="center_horizontal"
                android:id="@+id/tv_ampm"
                android:text="오전"
                android:layout_marginRight="7.6dp"
                android:layout_marginBottom="6.6dp"
                android:fontFamily="@font/sf_pro_text_semibold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#262626"
                android:gravity="center_horizontal"
                android:id="@+id/tv_time"
                android:text="8시 30분"
                android:fontFamily="@font/sf_pro_text_semibold"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="43.7dp"
        android:background="#262626"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27.6dp"
        android:layout_marginLeft="47.4dp"
        android:layout_marginRight="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#0957d3"
            android:gravity="center_horizontal"
            android:text="날짜를 설정해주세요"
            android:id="@+id/tv_daySet"
            android:fontFamily="@font/sf_pro_text_semibold"
            />
        <com.dpro.widgets.WeekdaysPicker
            android:id="@+id/wp_weekdays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_daySet"
            android:layout_marginTop="37.6dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sf_pro_text_semibold"
            app:highlight_color="#0957d3"
            app:background_color="#FFFFFF"
            app:weekend_text_color="#262626"/>
    </RelativeLayout>

</LinearLayout>